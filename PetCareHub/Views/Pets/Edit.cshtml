@model PassionProject_DentistAppointment.Models.PetDto

@{
    ViewBag.Title = "Edit";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }

    h2 {
        color: #343a40;
        text-align: center;
    }

    form {
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        margin: 20px auto;
    }

    label {
        display: block;
        margin-bottom: 5px;
        color: #495057;
    }

    input[type="text"],
    input[type="number"] {
        width: calc(100% - 12px);
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ced4da;
        border-radius: 3px;
        box-sizing: border-box;
    }

    input[type="submit"] {
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        color: #fff;
        text-align: center;
        font-size: 16px;
        padding: 12px 20px;
        transition: background-color 0.3s ease;
        cursor: pointer;
    }

        input[type="submit"]:hover {
            background-color: #0056b3;
        }
</style>

<h2>Edit Pet</h2>

<form id="petForm" method="POST" action="/Pets/Edit/@Model.PetID" onsubmit="return validateForm()">
    <div>
        <label for="PetID">ID</label>
        <input type="text" id="PetID" name="PetID" value="@Model.PetID" readonly required />
    </div>
    <div>
        <label for="PetName">Name</label>
        <input type="text" id="PetName" name="PetName" value="@Model.PetName" required />
    </div>
    <div>
        <label for="PetAge">Age</label>
        <input type="number" id="PetAge" name="PetAge" value="@Model.PetAge" required />
    </div>
    <div>
        <label for="PetBreed">Breed</label>
        <input type="text" id="PetBreed" name="PetBreed" value="@Model.PetBreed" required />
    </div>
    <div>
        <label for="PetGender">Gender</label>
        <input type="text" id="PetGender" name="PetGender" value="@Model.PetGender" required />
    </div>
    <div>
        <label for="PetWeight">Weight</label>
        <input type="number" id="PetWeight" name="PetWeight" step="0.01" value="@Model.PetWeight" required />
    </div>
    <div>
        <input type="submit" value="Update" />
    </div>
</form>

<script>
    function validateForm() {
        var form = document.getElementById('petForm');
        if (!form.checkValidity()) {
            // If the form is invalid, display appropriate error messages
            form.reportValidity();
            return false;
        }
        return true;
    }
</script>
