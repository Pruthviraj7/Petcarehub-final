@model PassionProject_DentistAppointment.Models.PetDto

@{
    ViewBag.Title = "View";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .back-link {
            display: inline-block;
            margin-bottom: 20px;
            text-decoration: none;
            color: #555;
        }

        .pet-name {
            font-size: 24px;
            margin-bottom: 15px;
        }

        .info {
            margin-bottom: 10px;
        }

        .label {
            font-weight: bold;
        }

        .value {
            margin-left: 10px;
        }

        /* Styles for the links */
        .update-link,
        .delete-link {
            display: inline-block;
            text-decoration: none;
            padding: 8px 16px;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
            margin-bottom: 10px;
        }

        /* Styles for the Update link */
        .update-link {
            background-color: #007bff;
            color: #ffffff;
            border: 1px solid #007bff;
        }

        /* Styles for the Delete link */
        .delete-link {
            background-color: #dc3545;
            color: #ffffff;
            border: 1px solid #dc3545;
        }

            /* Hover styles for both links */
            .update-link:hover,
            .delete-link:hover {
                background-color: #0056b3;
                color: #ffffff;
            }

        /*------------------------------------------------------------------------------------------------*/
        .pet-appointments-section {
            font-family: Arial, sans-serif;
            max-width: 600px;
            margin: 0 auto;
        }

        .owner-name {
            font-weight: bold;
        }

        .pet-appointment {
            margin-bottom: 10px;
        }

        .vet-name {
            display: inline-block;
            width: 200px;
        }

        .cancel-link {
            color: #ab2020;
            text-decoration: none;
            margin-left: 10px;
        }

        .new-appointment-section {
            margin-top: 20px;
        }

        .vet-dropdown {
            width: 100%;
            padding: 8px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-bottom: 10px;
        }

        label {
            font-weight: bold;
        }

        .book-vet-button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

            .book-vet-button:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>
    <div class="container">
        <a href="/Pets/List" class="back-link">Go back to list</a>
        <br />
        <a href="/Pets/Edit/@Model.PetID" class="update-link">Update</a>
        <br />
        <a href="/Pets/DeleteConfirm/@Model.PetID" class="delete-link">Delete</a>
        <br />
        <h2 class="pet-name">@Model.PetName</h2>
        <div class="info">
            <div class="label">Breed:</div>
            <div class="value">@Model.PetBreed</div>
        </div>
        <div class="info">
            <div class="label">Gender:</div>
            <div class="value">@Model.PetGender</div>
        </div>
        <div class="info">
            <div class="label">Age:</div>
            <div class="value">@Model.PetAge</div>
        </div>
        <div class="info">
            <div class="label">Weight:</div>
            <div class="value">@Model.PetWeight</div>
        </div>
    </div>
    <div class="container">
        <h2>Associated Veterans</h2>
        @if (Model.AssociatedVeterans != null && Model.AssociatedVeterans.Any())
        {
            foreach (var veteran in Model.AssociatedVeterans)
            {
                <div>
                    <h3>@veteran.VeteranName</h3>
                    <div><strong>Specialization:</strong> @veteran.VeteranSpecialization</div>
                    <div><strong>Phone:</strong> @veteran.VeteranPhone</div>
                    <div><strong>Email:</strong> @veteran.VeteranEmail</div>
                    <div><strong>Address:</strong> @veteran.VeteranAddress</div>
                    <div><strong>Rating:</strong> @veteran.VeteranRating</div>
                </div>
            }
        }
        else
        {
            <p>No associated veterans found for this pet.</p>
        }
    </div>

</body>
</html>
