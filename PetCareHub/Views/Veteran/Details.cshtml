@model PassionProject_DentistAppointment.Models.VeteranDto

@{
    ViewBag.Title = "View";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .back-link {
            display: inline-block;
            margin-bottom: 20px;
            text-decoration: none;
            color: #555;
        }

        .veteran-name {
            font-size: 24px;
            margin-bottom: 15px;
        }

        .info {
            margin-bottom: 20px;
            padding: 15px;
            border-radius: 5px;
            border: 2px solid #ddd;
            background-color: #f9f9f9;
        }

        .label {
            font-weight: bold;
            color: #333;
        }

        .value {
            margin-left: 10px;
            color: #666;
        }

        /* Add border-bottom to separate .info sections */
        .info:not(:last-child) {
            border-bottom: 1px solid #ddd;
        }

        /* Styles for the links */
        .update-link,
        .delete-link {
            display: inline-block;
            text-decoration: none;
            padding: 8px 16px;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
            margin-bottom: 10px;
        }

        /* Styles for the Update link */
        .update-link {
            background-color: #007bff;
            color: #ffffff;
            border: 1px solid #007bff;
        }

        /* Styles for the Delete link */
        .delete-link {
            background-color: #dc3545;
            color: #ffffff;
            border: 1px solid #dc3545;
        }

            /* Hover styles for both links */
            .update-link:hover,
            .delete-link:hover {
                background-color: #0056b3;
                color: #ffffff;
            }

        /*--------------------------------------------------------------------------------------------------*/
        .appointments-section {
            font-family: Arial, sans-serif;
            max-width: 600px;
            margin: 0 auto;
        }

        .veteran-name {
            font-weight: bold;
        }

        .appointment {
            margin-bottom: 10px;
        }

        .appointment-date {
            display: inline-block;
            width: 150px;
        }

        .cancel-link {
            color: #ab2020;
            text-decoration: none;
            margin-left: 10px;
        }

        .new-appointment-section {
            margin-top: 20px;
        }

        .appointment-dropdown {
            width: 100%;
            padding: 8px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-bottom: 10px;
        }

        label {
            font-weight: bold;
        }

        .book-appointment-button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

            .book-appointment-button:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>
    <div class="container">
        <a href="/Veteran/List" class="back-link">Go back to list</a>
        <br />
        <a href="/Veteran/Edit/@Model.VeteranID" class="update-link">Update</a>
        <br />
        <a href="/Veteran/DeleteConfirm/@Model.VeteranID" class="delete-link">Delete</a>
        <br />
        <h2 class="veteran-name">@Model.VeteranName</h2>
        <div class="info">
            <div class="label">Specialization:</div>
            <div class="value">@Model.VeteranSpecialization</div>
        </div>
        <div class="info">
            <div class="label">Phone:</div>
            <div class="value">@Model.VeteranPhone</div>
        </div>
        <div class="info">
            <div class="label">Email:</div>
            <div class="value">@Model.VeteranEmail</div>
        </div>
        <div class="info">
            <div class="label">Address:</div>
            <div class="value">@Model.VeteranAddress</div>
        </div>
        <div class="info">
            <div class="label">Rating:</div>
            <div class="value">@Model.VeteranRating</div>
        </div>
    </div>
    <div class="appointments-section">
        <h2>Appointments available for <span class="veteran-name">@Model.VeteranName</span>:</h2>
        @foreach (var appointment in ViewBag.BookedAppointments)
        {
            <div class="appointment">
                <span class="appointment-date">@appointment.AppointmentDate</span>
                <a class="cancel-link" href="/Veteran/UnAssociate/@Model.VeteranID?AppointmentID=@appointment.AppointmentID">[x]</a>
            </div>
        }

        <div class="new-appointment-section">
            <h4>Post a new Appointment for <span class="veteran-name">@Model.VeteranName</span></h4>
            <form method="POST" action="/Veteran/Associate/@Model.VeteranID">
                <select name="AppointmentID" class="appointment-dropdown">
                    @foreach (var appointment in ViewBag.AvailableAppointments)
                    {
                        <option value="@appointment.AppointmentID">@appointment.AppointmentDate</option>
                    }
                </select>
                <input type="submit" value="Book New Appointment" class="book-appointment-button" />
            </form>
        </div>
    </div>
</body>
</html>